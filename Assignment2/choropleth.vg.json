{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 868,
  "height": 450,
  "background":"beige",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/ne_110m_ocean.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data not collected in ' + datum.properties.NAME",
          "as": "tooltip"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "tooltip"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/AQI_and_Lat_Long_of_Countries.csv"
            },
            "key": "Country",
            "fields": ["AQI Value"]
          }
        }
      ],
      "layer":
      [
        {
          "mark": {"type": "geoshape"},
          "encoding": {
          "color": {
          "field": "AQI Value",
          "type": "quantitative",
          "title": "AQI Value",
          "scale": {
            "scheme": "bluegreen",
            "type": "threshold",
            "domain": [0, 50, 100, 150, 200, 250]
          },
          "legend":{"orient": "bottom-left", "direction": "horizontal"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "AQI Value", "type": "quantitative", "title": "AQI Value"}
          ]
        }
        },
        {"encoding": {"text":{"value": "Pakistan"}, 
         "tooltip": {"value": "25% of the Air Pollution here is caused by vehicles alone "}},
         "mark":{
          "type": "text",
          "dy": -75,
          "dx": 140,
          "fontSize": 12
          
         }
        },
        {"encoding": {"text":{"value": "China"}, 
         "tooltip": {"value": "China consumes as much coal annually as all other countries in the world COMBINED!"}},
         "mark":{
          "type": "text",
          "dy": -100,
          "dx": 200,
          "fontSize": 12
          
         }},
         {"encoding": {"text":{"value": "Australia"}, 
         "tooltip": {"value": "Australia has one of the best air quality in the world given its land mass"}},
         "mark":{
          "type": "text",
          "dy": 70,
          "dx": 280,
          "fontSize": 12
          
         }}
      ]
      
    }
  ],
  "config": {"view":{"stroke":"transparent"}}
}