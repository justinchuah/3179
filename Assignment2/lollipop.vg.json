{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "background":"beige",
  "data": {
    "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Assignment2/AQI_of_Countries.csv"
  },
  "params": [{
        "name": "numCities",
        "value": 5,
        "bind": {
            "input": "range",
            "min": 2,
            "max": 10,
            "step": 1,
            "name": "Number of cities: "
        }
    }]
  ,
  "transform": [
    {
      "window": [{
        "field": "CO AQI Value",
        "op":"rank",
        "as":"rank"
      }],
      "sort": [{"field":"CO AQI Value","order":"descending"}]
    },
    {
      "filter":"datum.rank <=numCities"
    }
  ],
  "layer": [{
    "mark": {"type": "bar", "size":10},
    "encoding": {
      "y":{
        "field":"City",
        "type": "ordinal",
        "title": "City Name",
        "sort":"-x"
      },
      "x":{
        "field":"CO AQI Value",
        "aggregate":"max",
        "title": "CO AQI Value",
        "axis": {"domain": true, "grid": false}
      },
      "color":{
        "field":"Country"
      },
      "tooltip":[{"field":"City"},{"field":"Country"}, {"field":"CO AQI Value"}]
        
    }
  },
  {"mark":{"type": "text", "dx":17, "dy":0, "color":"black", "size":13},
  "encoding": {
    "x":{
      "field":"CO AQI Value",
      "aggregate":"max",
      "type": "quantitative",
      "bandPosition": 0.5
    },
    "y":{
      "field":"City",
      "type": "ordinal",
      "sort":"-x"

    },
    "text":{"aggregate": "max", "field":"CO AQI Value"}
  }}
  ,
  {
    "mark": {"type": "point","size":250,"filled":true} ,
    "encoding": {
      "y":{
        "field":"City", "sort":"-x"
      },
      "x":{
        "aggregate":"max",
        "field":"CO AQI Value"
      },
      "color":{
        "field":"Country",
        "legend":{"orient": "bottom"},
        "scale":{"scheme":"greenblue"}
      },
      "tooltip":[{"field":"City"}, {"field":"Country"},{"field":"CO AQI Value"}]
    }
  }],
  "config": {"view":{"stroke": "transparent"}}
}
