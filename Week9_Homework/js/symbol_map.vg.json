{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Air Quality Indedx",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Week9_Homework/js/ne_110m.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "gray", "stroke": "lightgray"}
    },
    {
      "data": {
        
        "url": "https://raw.githubusercontent.com/justinchuah/3179/main/Week9_Homework/data/AQI_and_Lat_Long_of_Countries.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "lat", "type": "quantitative"},
        "latitude": {"field": "lng", "type": "quantitative"},
        "size": {
          "field": "AQI Value",
          "type": "quantitative",
          "title": "AQI Value",
          "scale": {"domain": [0, 500], "range": [0,500]}
        },
        "color": {
          "field": "AQI Value",
          "type": "quantitative",
          "title": "AQI Value",
          "scale": {
            "scheme": "reds",
            "type": "threshold",
            "domain": [ 10, 50, 200, 500]
          }
        }
      }
    }
  ]
}
